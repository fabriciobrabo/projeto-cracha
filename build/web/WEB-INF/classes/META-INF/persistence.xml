<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="CrachaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.bmplab.cracha.entidade.Evento</class>
    <class>br.bmplab.cracha.entidade.Coordenacao</class>
    <class>br.bmplab.cracha.entidade.Inscrito</class>
    <class>br.bmplab.cracha.entidade.Palestrante</class>
    <class>br.bmplab.cracha.entidade.Curso</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cracha?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.password" value="cracha_adm"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="cracha_adm"/>
    </properties>
  </persistence-unit>
</persistence>
